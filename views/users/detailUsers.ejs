<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../partials/head.ejs', {title: usersSeleccionado.first_name}) %> 
<body>
     
<!-- HEADER -->
<%- include('../partials/header.ejs') %> 
   
    
    
    <main>
        <h1>Datos del usuario: <%= usersSeleccionado.first_name %> <%= usersSeleccionado.last_name %> </h1>
        <ul>
            <li>
                <h2>Nombre:<%= usersSeleccionado.first_name%></h2>
            </li>
            <li>
                <h2>Apellido:<%= usersSeleccionado.last_name%></h2>
            </li>
            <li>
                <h2>E-mail: <%= usersSeleccionado.email%></h2>
            </li>
            <li>
                <h2>Telefono: <%= usersSeleccionado.telefono%></h2>
            </li>
            
        </ul>
        <div class="foto-principal-users"> 
            <img src="/img/usersImg/<%=usersSeleccionado.imagenUsers%>" alt="foto_users" class="main-foto-principal">
        </div>
        <section class="contenedor-boton-users">

            <div class="boton-borrar">
               
                <button type="button"><a href="/user/edit/<%=usersSeleccionado.id_usuario%>" class="href-boton-editar">EDITAR USUARIO</button></a>
            </div>

           <form action="/user/detailUsers/<%=usersSeleccionado.id_usuario%>?_method=DELETE" method="POST">
                <div class="boton-borrar">
                    <button type="submit">BORRAR USUARIO</button>
                </div>
            </form>
            
            
            
        </section>

        <%- include('../partials/footer')  %> 
    </main>
</body>
</html>